generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id            String         @id @default(uuid())
  name          String         @db.Text
  userImageUrl  String
  notifications Notification[]
}

model Notification {
  id        String   @id @default(uuid())
  text      String   @db.Text
  seen      Boolean  @default(false)
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())

  @@index([userId])
}
